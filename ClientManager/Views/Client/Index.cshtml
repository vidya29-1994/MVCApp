@{
    //Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Clients</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css">

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script>
        $(document).ready(function () {
            //Call EmpDetails jsonResult Method
            $.getJSON("Client/GetData",
                function (json) {
                    var tr;

                    //Append each row to html table
                    for (var i = 0; i < json.length; i++) {
                        var url = '@Url.Action("Edit", "Client", new { id = 1})';
                        url = url.replace("1", json[i].ClientID)

                        tr = $('<tr/>');
                        tr.append("<td>" + json[i].FullName + "</td>");
                        tr.append("<td>" + json[i].Address + "</td>");
                        tr.append("<td>" + json[i].PhoneNumber + "</td>");
                        tr.append("<td>" + json[i].PINCode + "</td>");
                        tr.append("<td>" + json[i].CityName + "</td>");
                        tr.append("<td>" + json[i].Email + "</td>");
                        tr.append("<td><a href='"+ url + "'>Edit</a></td>")
                        $('table').append(tr);

                    }
                    $('#demoGrid').DataTable();
                });

        });
    </script>
</head>
<body>

    <div class="content">
        <div class="container-fluid">
            <div class="container">
                <br />
                <h4>Clients</h4>

                <br />
                <div style="width:100%; margin:0 auto;">
                    <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th class="none">Address</th>
                                <th>Phone Number</th>
                                <th>PIN Code</th>
                                <th>City Name</th>
                                <th>Email</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <a href="/Client/Create" class="btn btn-info"> <i class="material-icons">add_circle_outline</i> New Record</a>
        </div>
    </div>
</body>
</html>  